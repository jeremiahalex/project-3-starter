<% if chatroom.group.users.include? current_user  %>


<div>
  <div class="section center-align">
  <h5>Group Chat</h5>
  <h6><strong>Don't be shy. Say hi!</strong></h6>
  </div>

  <div class="divider"></div>

  <div>
    <div id="messageBox">
      <div id="messages" data-chatroom=<%=chatroom.id%> data-user=<%=current_user.id%>>
        <%= render partial: 'message', collection: chatroom.messages%>
      </div>
    </div>

    <div class="divider"></div>

    <%= render partial: 'message_form'%>
  </div>

  <% else %>
  <div class="section">
    <img class="responsive-img" src="<%=@group.deal.img %>"%>
  </div>
<% end %>
