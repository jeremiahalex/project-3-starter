<div class="navbar-fixed navcss">
  <!-- Dropdown Structure -->
  <ul id="dropdown1" class="dropdown-content">
    <li>
      <%= link_to "Update Particulars", edit_account_registration_path %>
    </li>
    <li>
      <%= link_to "Create Request", new_request_path %>
    </li>
    <% if current_account && current_account.account_type == "organisation" %>
    <li>
      <%= link_to "Create Reward", new_reward_path %>
    </li>
    <% end %>
    <li>
      <%= link_to "My Requests", my_requests_path %>
    </li>
    <li>
      <%= link_to "My Rewards", my_rewards_path %>
    </li>
  </ul>

  <nav>
    <div class="nav-wrapper">
      <a href="/" data-activates="mobile-demo" class="button-collapse">
        <i class="material-icons">menu</i>
      </a>

      <ul id="nav-mobile" class="left">
        <li>
          <%= link_to root_path, class: "logo-img" do %>
            <%= image_tag 'projectlogo.png' %>
          <% end %>
        </li>
      </ul>

      <ul id="nav-mobile" class="left hide-on-med-and-down">
        <li>
          <a href="/requests">All Requests</a>
        </li>
        <li>
          <a href="/rewards">All Rewards</a>
        </li>
      </ul>

      <ul id="nav-mobile" class="right">
        <!-- Dropdown Trigger -->
        <% if current_account %>
        <li>
          <a href="/" class="logo-img"><img class="circle" src="<%= current_account.profile_image %>" , width=35, height=35></a>
        </li>
        <li>
          <a class="dropdown-button" href="#!" data-activates="dropdown1">Hello,
            <%= current_account.name %>
            <i class="material-icons right">arrow_drop_down</i>
          </a>
        </li>
        <li class="timecredit">&nbsp;<%= current_account.time_credit %>
          credits &nbsp;&nbsp;</li>
        <li><%= link_to "Logout", destroy_account_session_path, method: :delete %></li>
      <% else %>
        <li>
          <a class="modal-trigger" href="#modal1">Signup</a>
        </li>
        <li>
          <a href="/accounts/sign_in">Login</a>
        </li>
        <% end %>
      </ul>

    </div>
  </nav>
</div>

<ul class="side-nav" id="mobile-demo">
  <li>
    <a href="/requests">All Requests</a>
  </li>
  <li>
    <a href="/rewards">All Rewards</a>
  </li>
</ul>

<!-- dropdown modal -->
<div id="modal1" class="modal center">
  <div class="modal-content">
    <h4>Sign up as</h4>
    <%= link_to "Individual", "/accounts/sign_up?account_type=individual", class: "btn btn-primary" %>
    <%= link_to "Organisation", "/accounts/sign_up?account_type=organisation", class: "btn btn-primary" %>
  </div>
</div>
