<div class="container">


<h3>Edit event</h3>

<%= form_for @current_event do |f| %>

<div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :name, class: "validate"%>
          <%= f.text_field :name, class: "validate"%>
</div>
</div>
<div class="row">
  <div class="input-field col s12">
<%= f.label :location %>
<%= f.text_field :location %>
</div>
</div>

<div class="row">
  <div class="input-field col s12">
<%= f.label :date %>
<%= f.text_field :date, :class => "datepicker" %>
</div>
</div>

<div class="row">
  <div class="input-field col s12">
<%= f.label :time %>
<%= f.text_field :time, :class => "timepicker" %>
</div>
</div>

<div class="row">
  <div class="input-field col s12">
<%= f.label :budget %>
<%= f.number_field :budget, :required => true %>
</div>
</div>

<div class="row">
  <div class="input-field col s12">
<%= f.hidden_field :user_id %>
</div>
</div>
<div class="btn waves-effect waves-light" type="submit" name="action">
<%= f.submit%>
<i class="material-icons right">done</i>
</div>

<% end %>
</div>
</div>
