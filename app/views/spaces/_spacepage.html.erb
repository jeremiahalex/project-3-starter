<div class="row">
  <% for space in @spaces %>

  <div class="card col s4 pages-show <%= space.category.category_type.split.first %> center-align">
    <div class="card-image waves-effect waves-block waves-light">
      <img class="activator responsive-img" src="<%= space.image_url %>">
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4"><%= link_to space.company_name, space_path(space.id) %></span>
      <p><%= space.category.category_type %></p>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">Description</span>
      <p><%= space.description %></p>
    </div>
  </div>
  <% end %>
</div>


<div class="row">
  <div class="col s4 offset-s4 center-align">
    <%= will_paginate @spaces, :param_name => 'space_page' %>
  </div>
</div>
