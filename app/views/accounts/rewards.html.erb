<div class="container">
  <div class="row">
    <h3>My Rewards</h3>

    <div class="row">
      <div class="col s12">
        <ul class="tabs">
          <% if current_account.account_type == "organisation" %>
            <li class="tab col s6">
              <a href="#created">Created</a>
            </li>
            <li class="tab col s6">
              <a href="#completed">Completed</a>
            </li>
        <% else %>
          <li class="tab col s6">
            <a href="#registered">Registered</a>
          </li>
          <li class="tab col s6">
            <a href="#completed">Completed</a>
          </li>
          <% end %>
        </ul>
      </div>

      <div id="created" class="col s12">
        <% @rewards_created.each do |reward| %>
          <% if !reward.completed %>
          <div class="col s12 m6 l3">
            <div class="card hoverable">
              <a href="/rewards/<%= reward.id %>">
                <span class='div-link'></span>
              </a>
              <div class="card-image">
                <img src="<%= reward.image %>">
              </div>
              <div class="card-content">

                <h5 class="truncate"><%= reward.name %></h5>

                <p><%= reward.date.strftime('%d %B %Y (%A)') %></p>
                <p><%= reward.start_time.strftime('%I:%M%p') %>
                  to
                  <%= reward.end_time.strftime('%I:%M%p') %></p>
                <p><%= reward.unit_time_credit %> credits per pax</p>
                <p><%= reward.area %></p>
              </div>
              <div class="card-action">
                <p><%= reward.opening %>
                  Openings</p>
              </div>
            </div>
          </div>
          <% end %>
        <% end %>
      </div>

      <div id="registered" class="col s12">
        <% @rewards_registered.each do |reward| %>
          <% if !reward.completed %>
          <div class="col s12 m6 l3">
            <div class="card hoverable">
              <a href="/rewards/<%= reward.id %>">
                <span class='div-link'></span>
              </a>
              <div class="card-image">
                <img src="<%= reward.image %>">
              </div>
              <div class="card-content">

                <h5 class="truncate"><%= reward.name %></h5>

                <p><%= reward.date.strftime('%d %B %Y (%A)') %></p>
                <p><%= reward.start_time.strftime('%I:%M%p') %>
                  to
                  <%= reward.end_time.strftime('%I:%M%p') %></p>
                <p><%= reward.unit_time_credit %> credits per pax</p>
                <p><%= reward.area %></p>
              </div>
              <div class="card-action">
                <p><%= reward.opening %>
                  Openings</p>
              </div>
            </div>
          </div>
          <% end %>
        <% end %>
      </div>

      <div id="completed" class="col s12">
        <% @all_rewards.each do |reward| %>
          <% if reward.completed %>
            <div class="col s12 m6 l3">
              <div class="card hoverable">
                <a href="/rewards/<%= reward.id %>">
                  <span class='div-link'></span>
                </a>
                <div class="card-image">
                  <img src="<%= reward.image %>">
                </div>
                <div class="card-content">

                  <h5 class="truncate"><%= reward.name %></h5>

                  <p><%= reward.date.strftime('%d %B %Y (%A)') %></p>
                  <p><%= reward.start_time.strftime('%I:%M%p') %>
                    to
                    <%= reward.end_time.strftime('%I:%M%p') %></p>
                  <p><%= reward.unit_time_credit %> credits per pax</p>
                  <p><%= reward.area %></p>
                </div>
                <div class="card-action">
                  <p><%= reward.opening %>
                    Openings</p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

    </div>
  </div>
</div>
