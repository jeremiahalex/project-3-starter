<div class="container">
  <br>
  <div class="slider">
    <ul class="slides">
      <li><%= image_tag "Giftloop-01.png" %></li>
      <li><%= image_tag "Individual-01.png" %></li>
      <li><%= image_tag "Organisation-01.png" %></li>
    </ul>
  </div>

  <div class="row">
    <h3 class='mainLeft'>Requests</h3>
    <a href="/requests" class='mainRight'>See all >></a>
  </div>
  <div class="row">
    <% @four_requests.each do |request| %>
    <div class="col s12 m6 l3">
      <div class="card hoverable">
        <a href="/requests/<%= request.id %>">
          <span class='div-link'></span>
        </a>
        <div class="card-image">
          <img src="<%= request.image %>">
        </div>
        <div class="card-content">

          <h5 class="truncate"><%= request.name %></h5>

          <p><%= request.date.strftime('%d %B %Y (%A)') %></p>
          <p><%= request.start_time.strftime('%I:%M%p') %>
            to
            <%= request.end_time.strftime('%I:%M%p') %></p>
          <p><%= request.unit_time_credit %>
            credits per pax</p>
          <p><%= request.area %></p>
        </div>
        <div class="card-action">
          <p><%= request.opening %>
            Openings
          </p>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <div class="row">
    <h3 class='mainLeft'>Rewards</h3>
    <a href="/rewards" class='mainRight'>See all >></a>
  </div>
  <div class="row">
    <% @four_rewards.each do |reward| %>
    <div class="col s12 m6 l3">
      <div class="card hoverable">
        <a href="/rewards/<%= reward.id %>">
          <span class='div-link'></span>
        </a>
        <div class="card-image">
          <img src="<%= reward.image%>">
        </div>
        <div class="card-content">

          <h5 class="truncate"><%= reward.name %></h5>

          <p><%= reward.date.strftime('%d %B %Y (%A)') %></p>
          <p><%= reward.start_time.strftime('%I:%M%p') %>
            to
            <%= reward.end_time.strftime('%I:%M%p') %></p>
          <p><%= reward.unit_time_credit %>
            credits per pax</p>
          <p><%= reward.area %></p>
        </div>
        <div class="card-action">
          <p><%= reward.opening %>
            Openings</p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
