<div class="filter red lighten-5">

  <div class="container">
    <div class="row" style="border-bottom: 2px dashed black;">
      <div class="col s6 m6"><h3>Cart</h3></div>
      <div class="col s6 m6 right-align" style="margin-top: 30px;"><%= button_to 'Checkout', cart_checkout_path, class: 'hello', :form => { :class => "checkoutBtn" }, remote: true, method: :post %></div>
    </div>
  </div>

  <div class="teal lighten-5">
  <div class="container">
  <div class="row cart" style="padding-top: 40px; padding-bottom: 40px;">

    <% @all_cart_item.each do |item| %>

    <div class="col s12 m3">
         <div class="card">
           <div class="card-image">
             <% clothes_set = ClothesSet.find(item.clothes_set_id) %>
             <img src="<%= clothes_set.photo_URL %>" class="cart-img materialboxed" width="650" alt="<%= clothes_set.name %>">
             <span class="card-title" style="color: black;"><%= clothes_set.name %></span>
           </div>
            <input type="hidden" value="<%=clothes_set.id%>" class='setId'>
           <div class="card-action">
             <%= button_to 'Remove from Cart', cart_path(item.id), :form => { :class => "removeCartBtn" }, remote: true, method: :delete, class: "removefromcart" %>
           </div>
         </div>
    </div>

    <% end %>

  </div>
  </div>
</div>
</div>
