    <div class="container">
      <a href="https://github.com/emjys/project-3"><strong>MennStop</strong></a>&nbsp&copy 2017 &nbsp | &nbsp All Rights Reserved &nbsp | &nbsp
      <a href="/" class="page-scroll">Top<span class="fa fa-angle-up"></span></a></a>
    </div>
  </div>
</footer>

    <!-- Footer -->
    <footer class="page-footer teal">
        <div class="footer-copyright">
          <div class="container">
          Made with <a class="brown-text text-lighten-3" href="http://materializecss.com">Materialize</a>
          </div>
        </div>
    </footer>
  </body>
</html>
