<!DOCTYPE html>
<html>
  <head>
    <title>Project3</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
    <nav class="teal">
      <div class="nav-wrapper container">
        <%= link_to "Warranted", root_path, class: "brand-logo" %>
        <!-- <%= link_to "<i class='fa fa-bars' aria-hidden='true'></i>".html_safe, root_path, 'data-activates': "mobile-nav", class: "button-collapse" %> -->
        <a href="#" data-activates="mobile-nav" class="button-collapse"><i class='fa fa-bars' aria-hidden='true'></i></a>
        <ul class="right hide-on-med-and-down">
          <% content_for :links do%>
            <li><%= link_to "Register Warranty", warranty_register_path%></li>
            <% if account_signed_in? %>
              <li><%= link_to "<i class='fa fa-user-circle-o' aria-hidden='true'></i> ".html_safe + current_account.email, edit_account_registration_path%></li>
              <li><%= link_to "<i class='fa fa-sign-out' aria-hidden='true'></i> Logout".html_safe, destroy_account_session_path, method: :delete%></li>
            <% else %>
              <li><%= link_to "<i class='fa fa-user-plus' aria-hidden='true'></i> Sign Up".html_safe, new_account_registration_path%></li>
              <li><%= link_to "<i class='fa fa-sign-in' aria-hidden='true'></i> Login".html_safe, new_account_session_path%></li>
            <% end %>
          <% end %>
          <%= yield :links%>
        </ul>
        <ul class="side-nav" id="mobile-nav">
          <%= yield :links%>
        </ul>
      </div>
    </nav>
    <% flash.each do |message_type, message| %>
    <%= javascript_tag "Materialize.toast('#{message}', 3000, 'green')" if message_type.eql?'notice'%>
    <%= javascript_tag "Materialize.toast('#{message}', 3000 ,'red')" if message_type.eql?'alert'%>
    <% end %>
    <%= yield %>
    <footer class="teal page-footer">
      <div class="footer-copyright">
        <div class="container">
          Â© 2018 Warranted | <a class="center grey-text text-lighten-3" href="#">Privacy Policy</a> | <a class="grey-text text-lighten-3" href="#">Terms of Use</a>
          <span class="right">Authors | <a class="grey-text text-lighten-4" href="https://github.com/keed" target="_blank">Darren Koh</a> | <a class="grey-text text-lighten-4" href="https://github.com/limjiechao" target="_blank">Lim Jiechao</a></span>
        </div>
      </div>
    </footer>
  </body>
</html>
