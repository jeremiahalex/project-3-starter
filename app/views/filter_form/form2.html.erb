<div class="container">
  <div class="filter red lighten-5">
  <div class="row filernote">
    <div class="col s12 m8">
      <div class="card-panel filter">

      <h4 class="greettxt left-align">
        Wonderful! Now, what <span class="teal-text";>style of outfit</span> would <%= current_user.child[0].name %> like to try next month?
      </h4>
      <% size_name = Size.find(current_user.child[0].size_id).name %>
      <%= select_tag "style", options_from_collection_for_select(@styles, "name", "name"), onchange: "window.location.replace('/browse/?size=#{size_name}&&style='+ this.value + '&&gender=#{current_user.child[0].gender}')" %>
    </div>
    </div>
  </div>
  </div>
</div>
