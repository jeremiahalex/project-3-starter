<div class="row valign-wrapper login">
  <div class="col s5"></div>
  <div class="col s2">
    <h3>Sign up</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, :class => 'input' %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, :class => 'input' %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", :class => 'input' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'input' %>
      </div>

      <button class="waves-effect waves-light btn" type="submit">Signup</button>
    <% end %>

    <!-- <%= render "devise/shared/links" %> -->
  </div>
  <div class="col s5"></div>
</div>
