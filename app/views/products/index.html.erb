<div class="row">
  <%= link_to "New Product", new_product_path, class: "btn btn-primary btn-lg btn-block" %>
</div>
<div class="col-md-8 mt-3 mb-3 mx-auto flex-row">
  <div class="col-md-6 ml-1 mt-3 mb-3 mx-auto">
   <button class="btn btn-warning">
     <%= sort_link @search, :name, "Product" %>
   </button>
   <button class="btn btn-warning">
     <%= sort_link @search, :category,  "Category" %>
   </button>
  </div>
  <div class="col-md-6 mx-auto">
    <%= paginate @all_products %>
  </div>
</div>
<div class="offset-md-1 col-md-10 mt-3">
  <div class="row d-flex flex-row">
    <% @all_products.each do |indiv_product| %>
      <% if indiv_product.status == 0 %>
        <div class="col-xs-18 col-sm-6 col-md-3">
          <div class="thumbnail">
            <div class="thumbnail-pic" >
              <%= image_tag indiv_product.picture, :size => "260x200" %>
            </div>
            <div class="caption">
              <p class="thumbnail-category">Category: <%= indiv_product.category %></p>
              <p class="thumbnail-name"><%= indiv_product.name %></p>
              <p class="thumbnail-price">Price: <%= indiv_product.price %> credits<br></p>
            </div>
            <%= link_to "View", product_path(indiv_product), class: "btn btn-info btn-lg btn-block"%>
          </div>
        </div>
      <%end%>
    <%end%>
  </div>
</div>
