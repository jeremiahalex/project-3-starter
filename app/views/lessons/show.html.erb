<div class="content-lg container" style="width: 960px; padding-top: 30px">
  <div class="card mt-4" style="padding:25px">
    <h1 class="my-4"><%=@lesson.name%><br/></h1>
    <h3>Language:
      <%=@lesson.language_taught%></h3>

    <!-- Portfolio Item Row -->
    <div class="row">

      <div class="col-md-6">
        <img class="img-fluid" src="http://placehold.it/450x300" alt="">
      </div>

      <div class="col-md-6">
        <!-- <h3 class="my-3">Project Description</h3> <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam viverra euismod odio, gravida pellentesque urna varius vitae. Sed dui lorem, adipiscing in adipiscing et, interdum nec metus. Mauris
        ultricies, justo eu convallis placerat, felis enim.</p> -->
        <h3 class="my-3">Project Details</h3>
        <ul>
          <li>Lesson Id:
            <%=@lesson.id%></li>
          <li>Date & Time:
            <%=@lesson.datetime%></li>
          <!-- <h4>Time:<%=@lesson.datetime%></h4> -->
          <li>Duration:
            <%=@lesson.duration%>
            hours</li>
          <li>Venue:
            <%=@lesson.venue%></li>
        </ul>
        <h2 class="rate">Price: $<%=@lesson.price%>/hr</h2>
        <span class="text-warning">&#9733; &#9733; &#9733; &#9733; &#9734;</span>
        4.0 stars

        <h4><%= button_to 'Book Now!', lesson_path(@lesson), method: :get %></h4>

        <h4><%= button_to 'Contact Tutor', lesson_path(@lesson), method: :get %></h4>
      </div>
    </div>

    <div class="row">
      <div class="col-md-10">
        <h4>Lesson Details</h4>
        <p><%=@lesson.details%></p>
      </div>
    </div>

  <div class="row">
    <div class="col-md-3">
      <h4>About Tutor</h4>
      <!-- <img class="rounded-circle" src="<%@lesson_tutor.photo%>" alt="Generic placeholder image"> -->
      <img class="rounded-circle" src="http://placehold.it/150x150" alt="">
    </div>
    <div class="col-md-8">
      <h4>More details about tutor</h4>
      <p>Name:
        <%=@lesson_tutor.name%></p>
      <p>Gender:
        <%=@lesson_tutor.gender%></p>
      <p>Past Experiences:
        <%=@lesson_tutor.past_experience%></p>
      <p>Github:
        <%=@lesson_tutor.github%>
      </p>
    </div>
  </div>
    <!-- /.row -->
  </div>

  <!--Tutor's other lessons in cards-->
  <div class="row justify-content-md-center">
    <div class="col-md-auto">
      <h2 class="text-center">Check out his other Lessons!</h2>
    </div>
  </div>

  <div class="row">
    <% @tutor_lessons.each do |l| %>
      <div class="col-md-4 col-sm-6">

        <div class="card-container manual-flip">
          <div class="card">
            <div class="front">
              <div class="cover">
                <!-- <%= image_tag "alex.jpg", class:"img-responsive" %> -->

                <!-- <img src="images/rotating_card_thumb.png"/> -->
              </div>
              <div class="user">
                <%= image_tag "shumin.jpg", class:"img-circle" %>

                <!-- <img class="img-circle" src="images/rotating_card_profile2.png"/> -->
              </div>
              <div class="content">
                <div class="main">
                  <div class="text-center">
                    <p class="profession"><%= l.language_taught %></p>
                  </div>
                  <br>

                  <p class="text-center"><%= l.datetime %></p>

                  <div class="rate">
                    $<%= l.price %>/hr
                  </div>
                  <!-- <p class="text-center">"I am certify by microsoft! <br> Weee <br> pick me as tutor </p> -->
                  <!-- <div class="class-card-price"> <div class="class-card-price-inner"> $185 </div> </div> -->
                </div>

                <div class="footer">
                  <button class="btn btn-simple" onclick="rotateCard(this)">
                    <i class="fa fa-mail-forward"></i>
                    Click here to view more
                  </button>
                </div>
              </div>
            </div>
            <!-- end front panel -->
            <div class="back">
              <div class="header">
                <h5 class="motto">"To be or not to be, this is my awesome motto!"</h5>
              </div>
              <div class="content">
                <div class="main">
                  <h4 class="text-center">Ruby</h4>
                  <p class="text-center">Web design, Adobe Photoshop, HTML5, CSS3, Corel and many others...</p>

                  <div class="text-center">
                    <input type="button" class="btn" value="Book Lesson">
                  </div>

                </div>
              </div>
              <div class="footer">
                <button class="btn btn-simple" rel="tooltip" title="Flip Card" onclick="rotateCard(this)">
                  <i class="fa fa-reply"></i>
                  Back
                </button>
                <div class="social-links text-center">
                  <a href="http://creative-tim.com" class="facebook">
                    <i class="fa fa-facebook fa-fw"></i>
                  </a>
                  <a href="http://creative-tim.com" class="google">
                    <i class="fa fa-google-plus fa-fw"></i>
                  </a>
                  <a href="http://creative-tim.com" class="twitter">
                    <i class="fa fa-twitter fa-fw"></i>
                  </a>
                </div>
              </div>
            </div>
            <!-- end back panel -->
          </div>

          <!-- end card -->
        </div>

        <!-- end card-container -->
      </div>
    <% end %>
    <!-- end col sm 3 -->

  </div>
</div>
</div>

