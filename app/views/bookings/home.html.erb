<!-- ################# Select Timing & Therapist ################# -->
<div class="backgrd">
  <div class="container">

    <div class="row center">

      <%= form_for @booking, remote: true do |booking_form| %>
      <%#= booking_form.text_field :time %>
      <div>
        <div class="input-field col s12 m6 white">
          <%= booking_form.text_field :date, class: 'datepicker', id: 'date_selector', placeholder: 'Choose Your Date' %>
          <!-- This is the datepicker in rails format -->
        </div>

        <div class="input-field col s12 m6 white time_selector">
          <%= booking_form.select :time,
          options_for_select([
            ["Choose Your Timeslot", "0"],
            ["11:00AM", "1"],
            ["11:30AM", "2"],
            ["12:00PM", "3"],
            ["12:30PM", "4"],
            ["13:00PM", "5"],
            ["13:30PM", "6"],
            ["14:00PM", "7"],
            ["14:30PM", "8"],
            ["15:00PM", "9"],
            ["15:30PM", "10"],
            ["16:00PM", "11"],
            ["16:30PM", "12"],
            ["17:00PM", "13"],
            ["17:30PM", "14"],
            ["18:00PM", "15"],
            ["18:30PM", "16"],
            ["19:00PM", "17"],
            ["19:30PM", "18"],
            ["20:00PM", "19"],
            ["20:30PM", "20"]
            ]), {}, { :class => 'time_dropdown', :disabled => false } # disabled true to disable. fix the onset date disabled = false else true
            %>
          </div>
        </div>


        <!-- ################# Services ################# -->
        <table class="highlight bordered white" id="table">
          <thead>
            <tr>
              <th>Service Name</th>
              <th class="description">Description</th>
              <th class="price">Price(SGD)</th>
              <th>Therapist</th>
              <th>Select</th>
            </tr>
          </thead>

          <tbody>
            <% @all_services.each do |service| %>
            <tr>
              <td><%= service.name %></td>
              <td><%= service.description %></td>
              <td><%= service.price.to_i %></td>
              <td><%= service.therapist.name %></td>
              <td>
                <input type="checkbox" name="booking[services_list][<%= service.id %>]" id="checkbox<%= service.id %>" class="service_checkbox"/>
                <label for="checkbox<%= service.id %>"></label>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
          <%= hidden_field_tag(:stripeToken) %>
        <%= booking_form.submit 'Submit Booking and Pay', :class => 'btn waves-effect waves-light', :id => 'submit-btn' %>
        <%#= submit_tag("Proceed To Payment", :id=>"button", :class=>"btn waves-effect waves-light", :name=>"action") %>
        <% end %>

        <%= form_tag charges_path do %>
          <article>
            <% if flash[:error].present? %>
              <div id="error_explanation">
                <p><%= flash[:error] %></p>
              </div>
            <% end %>
          </article>
          <script src="https://checkout.stripe.com/checkout.js">
          </script>
        <% end %>


      </div>

  </div>
</div>


