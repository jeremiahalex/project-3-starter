<div id="index-banner" class="parallax-container">
  <div class="section no-pad-bot">
    <div class="container">
      <div class="row center">

        <%= form_for @booking, remote: true do |booking_form| %>
        <%#= booking_form.text_field :time %>

        <div>
          <div class="input-field col s12 m6 teal">
            <input type="text" class="datepicker" id="date_selector" placeholder="Choose Your Date">
          </div>

          <div class="input-field col s12 m6 teal time_selector">
            <%= booking_form.select :time,
            options_for_select([
              ["Choose Your Timeslot", "0"],
              ["11:00AM", "1"],
              ["11:30AM", "2"],
              ["12:00PM", "3"],
              ["12:30PM", "4"],
              ["13:00PM", "5"],
              ["13:30PM", "6"],
              ["14:00PM", "7"],
              ["14:30PM", "8"],
              ["15:00PM", "9"],
              ["15:30PM", "10"],
              ["16:00PM", "11"],
              ["16:30PM", "12"],
              ["17:00PM", "13"],
              ["17:30PM", "14"],
              ["18:00PM", "15"],
              ["18:30PM", "16"],
              ["19:00PM", "17"],
              ["19:30PM", "18"],
              ["20:00PM", "19"],
              ["20:30PM", "20"]
              ], { :class => 'time_selector', :id => 'time_selector' })
              %>

          </div>
        </div>


        <!-- ################# Services ################# -->
        <table class="highlight bordered teal lighten-2">
          <thead>
            <tr>
              <th>Service Name</th>
              <th>Description</th>
              <th>Price</th>
              <th>Therapist</th>
              <th>Select</th>
            </tr>
          </thead>

          <tbody>
            <% @all_services.each do |service| %>
            <tr>
              <td><%= service.name %></td>
              <td><%= service.description %></td>
              <td><%= service.price %></td>
              <td><%= service.therapist.name %></td>
              <td>
                <input type="checkbox" id="checkbox<%= service.id %>" class="service_checkbox"/>
                <label for="checkbox<%= service.id %>"></label>
                <%= booking_form.check_box :service_id, { :class => 'time_selector'} %>
                <%#= check_box_tag(service.id) %>
                <%#= label_tag(service.id) %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <!-- ################# End Services ################# -->
        <%= booking_form.submit %>
        <%#= submit_tag("Proceed To Payment", :id=>"button", :class=>"btn waves-effect waves-light", :name=>"action") %>
        <% end %>



      </div>
    </div>
  </div>
</div>
